<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/lowH"
        android:layout_width="173dp"
        android:layout_height="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:max="359"
        app:layout_constraintEnd_toStartOf="@+id/HelloOpenCvView"
        app:layout_constraintTop_toBottomOf="@+id/highV" />

    <SeekBar
        android:id="@+id/lowS"
        android:layout_width="177dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:max="359"
        app:layout_constraintStart_toEndOf="@+id/LS"
        app:layout_constraintTop_toTopOf="@+id/LS" />

    <SeekBar
        android:id="@+id/lowV"
        android:layout_width="174dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:max="359"
        app:layout_constraintStart_toEndOf="@+id/LV"
        app:layout_constraintTop_toTopOf="@+id/LV" />

    <SeekBar
        android:id="@+id/highS"
        android:layout_width="176dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="359"
        app:layout_constraintStart_toEndOf="@+id/HS"
        app:layout_constraintTop_toBottomOf="@+id/highH" />

    <ToggleButton
        android:id="@+id/toggleButtonCapture"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/HelloOpenCvView"
        android:layout_width="330dp"
        android:layout_height="280dp"
        android:layout_marginStart="40dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/toggleButtonCapture"
        app:layout_constraintTop_toTopOf="@+id/toggleButtonCapture"
        opencv:camera_id="back" />

    <SeekBar
        android:id="@+id/highH"
        android:layout_width="177dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:max="359"
        app:layout_constraintStart_toEndOf="@+id/HH"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSV High"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="188dp"
        android:text="HSV Low"
        app:layout_constraintEnd_toStartOf="@+id/HelloOpenCvView"
        app:layout_constraintTop_toBottomOf="@+id/HV" />

    <TextView
        android:id="@+id/HH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/HS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/HH"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/HV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/HS"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/LH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/LS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/LH"
        app:layout_constraintTop_toBottomOf="@+id/LH" />

    <TextView
        android:id="@+id/LV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/LS"
        app:layout_constraintTop_toBottomOf="@+id/LS" />

    <SeekBar
        android:id="@+id/highV"
        android:layout_width="176dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="359"
        app:layout_constraintStart_toEndOf="@+id/HV"
        app:layout_constraintTop_toBottomOf="@+id/highS" />


</android.support.constraint.ConstraintLayout>